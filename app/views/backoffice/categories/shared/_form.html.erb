<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categorias</h1>
                  <% if @category.errors.full_messages.each do |message| %>
                    <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= message %>
                    </div>
                    <% end %>
                  <% end %>
                <div class="panel panel-default">
                        <div class="panel-heading">
                            <%= action %>
                            <%= link_to backoffice_categories_path, class:"btn btn-default btn-sm pull-right", style: "margin-top: -5px" do %>Voltar
                            <% end %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                          <div class="col-lg-6">
                            <%= form_for ([:backoffice, @category]) do |f| %>
                              <div class="form-group">
                              <label>Descrição</label>
                              <%= f.text_field :description, class:"form-control", placeholder:"Ex.: Animais/Pet, Automóveis, etc" %>
                              </div>
                            <button type="submit" class="btn btn-default">Salvar</button>
                            <% end %>
                          </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->