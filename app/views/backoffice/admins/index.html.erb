<h1 class="page-header">Administradores</h1>
<div class="panel panel-default">
        <div class="panel-heading">
            Administradores
            <%= link_to new_backoffice_admin_path, class:"btn btn-success btn-sm pull-right", style: "margin-top: -5px" do %><i class="fa fa-plus"></i> Novo Admin
            <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Email</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    	<% @admins.each do |admin| %>
                        <tr>
                            <td><%= admin.id %></td>
                            <td><%= admin.email %></td>
                            <td>
                                <%= link_to edit_backoffice_admin_path(admin),class:"btn btn-primary btn-circle" do %><i class="fa fa-edit"></i>
					                            <% end %>
					                            <button type="button" disabled class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
					                            </button>
					                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
