<h1 class="page-header">Administradores</h1>
  <% if @admin.errors.full_messages.each do |message| %>
    <script>
    $.notify("<%= message %>", "error");
    </script>
    <% end %>
  <% end %>
<div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
            <%= link_to backoffice_admins_path, class:"btn btn-default btn-sm pull-right", style: "margin-top: -5px" do %>Voltar
            <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="col-lg-6">
            <%= form_for ([:backoffice, @admin]) do |f| %>
              <div class="form-group">
              <label>Email</label>
              <%= f.text_field :email, class:"form-control", placeholder:"Ex.: admin@email.com" %>
              <label>Senha</label>
              <%= f.password_field :password, class:"form-control", placeholder:"A senha deve conter 6 caracteres" %>
              <label>Confirmar Senha</label>
              <%= f.password_field :password_confirmation, class:"form-control", placeholder:"A senha deve conter 6 caracteres" %>
              </div>
            <button type="submit" class="btn btn-default">Salvar</button>
            <% end %>
          </div>
        </div>
        <!-- /.panel-body -->
    </div>